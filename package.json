{
    "name": "react-sound-recorder",
    "version": "1.0.1",
    "description": "a simple react audio recorder with some custom things",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/esm/index.d.ts",
    "repository": "https://github.com/M-ZENHOM/React-Sound-Recorder",
    "homepage": "https://github.com/M-ZENHOM/React-Sound-Recorder",
    "keywords": [
        "react",
        "reactjs",
        "nextjs",
        "audio",
        "voice",
        "audio recording",
        "audio recorder",
        "voice recording",
        "voice recorder",
        "recorder",
        "recording",
        "getUserMedia",
        "mediaDevices",
        "ffmpeg",
        "download audio",
        "download",
        "mp3",
        "webm",
        "wav",
        "mpeg"
    ],
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rm -rf dist/ && prettier --write src/ && npm run build:esm && npm run build:cjs",
        "build:esm": "tsc",
        "build:cjs": "tsc --module CommonJS --outDir dist/cjs"
    },
